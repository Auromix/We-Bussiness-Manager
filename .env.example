# LLM API Keys (至少需要配置一个)
# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Primary LLM Provider (openai / anthropic)
PRIMARY_LLM=openai

# LLM Model Settings
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Database Configuration
# SQLite (默认)
DATABASE_URL=sqlite:///data/store.db
# PostgreSQL 示例
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis Configuration (可选)
REDIS_URL=redis://localhost:6379/0

# Bot Configuration
BOT_NAME=小助手
TARGET_GROUP_NAME=门店经营群
CONFIDENCE_THRESHOLD=0.7
DAILY_SUMMARY_TIME=21:00

# WeChat Configuration (可选)
# 如果只想机器人响应特定群聊，可以在这里配置
# WECHAT_GROUP_IDS=chatid1,chatid2,chatid3

# WeChat Work (企业微信) Configuration
# 企业 ID
WECHAT_WORK_CORP_ID=your_corp_id_here
# 应用密钥
WECHAT_WORK_SECRET=your_secret_here
# 应用 ID
WECHAT_WORK_AGENT_ID=your_agent_id_here
# 回调 Token (随机字符串，建议 10-32 位)
WECHAT_WORK_TOKEN=your_token_here
# 回调消息加密密钥 (43 位随机字符串)
WECHAT_WORK_ENCODING_AES_KEY=your_encoding_aes_key_here

# HTTP API Configuration
WECHAT_HTTP_HOST=0.0.0.0
WECHAT_HTTP_PORT=8000
WECHAT_CALLBACK_PATH=/callback

# Feature Flags (可选)
# 启用函数调用功能（Agent 可以调用仓库函数）
ENABLE_FUNCTION_CALLING=false
